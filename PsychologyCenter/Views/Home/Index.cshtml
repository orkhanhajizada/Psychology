                                            <div class="icons-holder">
                                                <div class="icons-holder-inner">
                                                    <div class="social-icons icon-sm icon-dark icon-circled icon-theme-colored">
                                                        <a data-lightbox="image" href="~/Uploads/@galery.BigPhoto"><i class="fa fa-picture-o"></i></a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }

                            </div>
                            <!-- End Portfolio Gallery Grid -->
                        </div>
                    </div>
                </div>
            </section>

            <!-- Section: FAQ -->
            <section>
                <div id="faq" class="container">
                    <div class="section-title text-center">
                        <div class="row">
                            <div class="col-md-8 col-md-offset-2">
                                <h2 class="text-uppercase mt-0">TEZ-TEZ VERİLƏN SUALLAR</h2>
                                <div class="title-icon">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div id="accordion1" class="panel-group accordion">
                            @foreach (var faq in Model.Faqs)
                            {
                                <div class="panel">
                                    <div class="panel-title"> <a data-parent="#accordion1" data-toggle="collapse" href="#accordion_@faq.Id" class="" aria-expanded="true"> <span class="open-sub"></span> <strong>@Html.Raw(faq.Question)</strong></a> </div>
                                    <div id="accordion_@faq.Id" class="panel-collapse collapse " role="tablist" aria-expanded="true">
                                        <div class="panel-content">
                                            <p>@Html.Raw(faq.Answer)</p>
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>
