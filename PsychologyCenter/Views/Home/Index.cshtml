                                                <form name="appointment_form_at_home" class="" id="ajax-contact">
                                                    <div class="row">
                                                        <div class="col-sm-12">
                                                            <div class="form-group mb-10">
                                                                <input id="name" name="name" class="form-control" type="text" required="" placeholder="Ad və soyad" aria-required="true">
                                                            </div>
                                                        </div>
