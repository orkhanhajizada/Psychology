            <!-- Section: News -->
            <section id="news">
                <div class="container pb-110">
                    <div class="section-title text-center">
                        <div class="row">
                            <div class="col-md-8 col-md-offset-2">
                                <h2 class="text-uppercase mt-0">Məqalələr</h2>
                                <div class="title-icon">
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="section-content">
                        <div class="row multi-row-clearfix">
                            <div class="blog-posts">

                                @foreach (var news in Model.Blogs)
                                {

                                    <div class="col-xs-12 col-sm-12 col-md-6">
                                        <article class="post style1 clearfix maxwidth500">
                                            <div class="col-md-4 p-0">
                                                <div class="entry-header">
                                                    <div class="post-thumb">
                                                        <input type="hidden" value="@news.Id" />
                                                        <img src="~/Uploads/@news.TitlePhoto" alt="@news.MinAbout" class="img-responsive img-fullwidth">
                                                    </div>
                                                    <div class="entry-date entry-date-absolute">
                                                        @news.Date.Day <span>@news.Date.ToString("MMMM", culture)</span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-8 p-0">
                                                <div class="entry-content pl-50 p-20 pt-30 pr-20">

                                                    <h5 class="entry-title pt-0"><a href="#">@news.Title</a></h5>
                                                    <p>@news.MinAbout</p>
                                                    <div class="entry-meta pull-left flip mt-10">

                                                        <ul class="list-inline">
                                                            <li>
                                                                <i class="fa fa-thumbs-o-up mr-5"></i>
                                                                @if (news.Likes != null)
                                                                {
                                                                    @news.Likes.Count()
                                                                }
                                                                else
                                                                {
                                                                    @:0
                                                                }

                                                            </li>
                                                            <li>
                                                                <i class="fa fa-comments-o mr-5"></i>
                                                                @if (Model.Comments.Where(w => w.BlogId == news.Id) != null)
                                                                {
                                                                    @Model.Comments.Where(w => w.BlogId == news.Id && w.IsActive == true).Count()
                                                                }
                                                                else
                                                                {
                                                                    @:0
                                                                }

                                                            </li>
                                                            <li>
                                                                <i class="far fa-eye mr-5"></i>
                                                                @if (news.ReadCounts != null)
                                                                {
                                                                    @news.ReadCounts.Where(r => r.BlogId == news.Id).Count()
                                                                }
                                                                else
                                                                {
                                                                    @:0
                                                                }
                                                        </ul>
                                                    </div>
                                                    <a class="readCount text-theme-colored mt-10 mb-0 pull-right flip" style="background-color:transparent;border-color:transparent" href="@Url.Action("read","blog", new {Slug= news.Slug})"> Ətraflı <i class="fa fa-angle-double-right"></i></a>
                                                    <div class="clearfix"></div>
                                                </div>
                                            </div>
                                        </article>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="row text-center">
                        <div class="col-md-12  ">
                            <a class="btn btn-lg btn-dark btn-theme-colored" href="@Url.Action("index","blog")">Daha çox</a>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Section: Gallery -->
            <section id="gallery" class="bg-lighter" data-bg-img="../../Public/images/pattern/p4.png">
                <div class="container pb-0">
                    <div class="section-title text-center">
                        <div class="row">
                            <div class="col-md-8 col-md-offset-2">
                                <h2 class="text-uppercase mt-0">Galereya</h2>
                                <div class="title-icon">
                                </div>
                                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Rem autem<br> voluptatem obcaecati!</p>
